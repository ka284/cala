<body>
    <div class="container">
        <div class="header">
            <h1>Student Attendance Calculator</h1>
            <p>Calculate attendance percentage and statistics</p>
        </div>
        
        <div class="content">
            <div class="form-group">
                <label for="totalDays">Total School Days</label>
                <input type="number" id="totalDays" placeholder="Enter total school days" min="1">
            </div>
            
            <div class="form-group">
                <label for="absentDays">Absent Days</label>
                <input type="number" id="absentDays" placeholder="Enter number of absent days" min="0">
            </div>
            
            <button class="calculate-btn" onclick="calculateAttendance()">Calculate Attendance</button>
            
            <div class="error-message" id="errorMessage"></div>
            
            <div class="result-container" id="resultContainer">
                <div class="result-item">
                    <span class="result-label">Total Days:</span>
                    <span class="result-value" id="totalDaysResult">0</span>
                </div>
                
                <div class="result-item">
                    <span class="result-label">Absent Days:</span>
                    <span class="result-value absent" id="absentDaysResult">0</span>
                </div>
                
                <div class="result-item">
                    <span class="result-label">Present Days:</span>
                    <span class="result-value present" id="presentDaysResult">0</span>
                </div>
                
                <div class="result-item">
                    <span class="result-label">Attendance Percentage:</span>
                    <span class="result-value percentage" id="attendancePercentage">0%</span>
                </div>
                
                <div class="attendance-bar">
                    <div class="attendance-progress" id="attendanceProgress"></div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function calculateAttendance() {
            // Get input values
            const totalDaysInput = document.getElementById('totalDays');
            const absentDaysInput = document.getElementById('absentDays');
            
            const totalDays = parseInt(totalDaysInput.value);
            const absentDays = parseInt(absentDaysInput.value);
            
            // Reset error message
            const errorMessage = document.getElementById('errorMessage');
            errorMessage.classList.remove('show');
            
            // Validate inputs
            if (isNaN(totalDays) || totalDays <= 0) {
                showError('Please enter a valid number for total school days');
                return;
            }
            
            if (isNaN(absentDays) || absentDays < 0) {
                showError('Please enter a valid number for absent days');
                return;
            }
            
            if (absentDays > totalDays) {
                showError('Absent days cannot be greater than total days');
                return;
            }
            
            // Calculate attendance
            const presentDays = totalDays - absentDays;
            const attendancePercentage = (presentDays / totalDays) * 100;
            
            // Display results
            document.getElementById('totalDaysResult').textContent = totalDays;
            document.getElementById('absentDaysResult').textContent = absentDays;
            document.getElementById('presentDaysResult').textContent = presentDays;
            document.getElementById('attendancePercentage').textContent = attendancePercentage.toFixed(2) + '%';
            
            // Show result container
            const resultContainer = document.getElementById('resultContainer');
            resultContainer.classList.add('show');
            
            // Animate progress bar
            const progress = document.getElementById('attendanceProgress');
            setTimeout(() => {
                progress.style.width = attendancePercentage + '%';
            }, 100);
        }
        
        function showError(message) {
            const errorMessage = document.getElementById('errorMessage');
            errorMessage.textContent = message;
            errorMessage.classList.add('show');
            
            // Hide result container if visible
            const resultContainer = document.getElementById('resultContainer');
            resultContainer.classList.remove('show');
        }
        
        // Allow Enter key to trigger calculation
        document.addEventListener('keypress', function(event) {
            if (event.key === 'Enter') {
                calculateAttendance();
            }
        });
    </script>
</body>
